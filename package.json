{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --noEmit --watch",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 10",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write \"resources/js/**/*.{ts,tsx,js,jsx}\"",
        "format:check": "prettier --check \"resources/js/**/*.{ts,tsx,js,jsx}\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "check-all": "npm run type-check && npm run lint && npm run format:check && npm run test:run"
    },
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "@headlessui/react": "^2.0.0",
        "@inertiajs/react": "^2.0.0",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/vite": "^4.0.0",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^24.4.0",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "@types/ziggy-js": "^1.3.3",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "@vitejs/plugin-react": "^4.2.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "autoprefixer": "^10.4.12",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.4.0",
        "jsdom": "^27.0.0",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "prettier": "^3.6.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.2.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.0",
        "vite": "^7.0.4",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "laravel-echo": "^2.2.4",
        "lucide-react": "^0.544.0",
        "pusher-js": "^8.4.0"
    }
}
